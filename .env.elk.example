# USDC Event Tracker Configuration
WEBHOOK_URL=wss://sepolia.infura.io/ws/v3/YOUR_PROJECT_ID
NETWORK=sepolia
SINKS=console,elasticsearch

# Elasticsearch Configuration
ELASTICSEARCH_URLS=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=usdc-events
ELASTICSEARCH_BATCH_SIZE=100
ELASTICSEARCH_USE_TIMESTAMP_SUFFIX=true

# Logging Configuration  
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Filesystem sink for backup
FS_OUTPUT_DIR=./logs
FS_FORMAT=jsonl
FS_FILE_PREFIX=usdc-backup

# Optional: Direct log output to file for Filebeat
LOG_FILE=./logs/usdc-tracker.log